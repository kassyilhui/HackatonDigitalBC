
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  <title>SignUp</title>
  <link href="~/Content/login.css" rel="stylesheet" />
    <div class="row signup">
        <div class="card-panel blue lighten-5">


            <div class="row">
                <div class="input-field col s12">
                    <input id="correo" type="email" v-model="newUser.username">
                    <label for="correo"> <i class="fa fa-user"></i> Usuario</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input id="contraseña" type="password" class="validate"  v-model="newUser.password">
                    <label for="contraseña"><i class="fa fa-lock"></i> Contraseña</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">

                    <input id="nombreComercial" type="text" data-length="10"  v-model="newUser.comercialname">
                    <label for="nombreComercial">Nombre comercial </label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">

                    <input id="ciudad" type="text"  v-model="newUser.city" data-length="10">
                    <label for="ciudad">Ciudad </label>
                </div>
                <div class="input-field col s6">

                    <input id="estado" type="text"  v-model="newUser.state" data-length="10">
                    <label for="estado">Estado </label>
                </div>
            </div>


            <div class="row">
                <div class="input-field col s6">

                    <input id="colonia" type="text"  v-model="newUser.district" data-length="10">
                    <label for="colonia">Colonia </label>
                </div>
                <div class="input-field col s6">

                    <input id="codigoPostal" type="text"  v-model="newUser.cp" data-length="10">
                    <label for="codigoPostal">Código postal</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">

                    <textarea id="notas" class="materialize-textarea"  v-model="newUser.notes" data-length="120"></textarea>
                    <label for="notas">Notas</label>
                </div>
            </div>

            <div class="row">
                <h6>latitud y longitud se completaran automaticamete cuando ingrese su hubicación</h6>
                <div class="input-field col s6">
                    
                    <input id="latitud" type="text" readonly  v-model="newUser.lat" data-length="10">
                    <label for="latitud">Latitud</label>
                </div>
                <div class="input-field col s6">

                    <input id="longitud" type="text" readonly  v-model="newUser.lon" data-length="10">
                    <label for="longitud">Longitud</label>
                </div>
            </div>


            <div class="row">
                <div class="input-field col s6">

                    <h6>Ingrese la ubicación de su establecimiento</h6>
                    <gmap-autocomplete @@place_changed="setPlace">
                    </gmap-autocomplete>

                    <label style="margin-top:6em;">

                        <a class="waves-effect waves-effect green lighten-2 btn text-darken-3" @@click="addMarker"><i class="fa fa-plus-circle"></i> Agregar </a>
                    </label>
                </div>
                <div class="input-field col s6">


                    <gmap-map :center="center" :zoom="12" style="width:100%; height: 250px; margin:5%;">
                        <gmap-marker :key="index"
                            v-for="(m, index) in markers"
                            :position="m.position"
                            @@click="center=m.position"></gmap-marker>
                    </gmap-map>
                </div>
            </div>






            <div class="row" style="position:center;">
                <a class="waves-effect green lighten-2 btn text-darken-3 col s12 " v-on:click="signUp" style="position:center"> <i class="fa fa-heartbeat red-text text-lighten-2"></i> Registrarse</a>

            </div>

            </div>
        </div>





