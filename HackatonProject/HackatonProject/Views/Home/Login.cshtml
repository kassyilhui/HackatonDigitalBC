
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <title>Login</title>

 
    <link href="~/Content/login.css" rel="stylesheet" />

    <div class="row login">
        
            <form class="col s12 ">
                <div class="card-panel blue lighten-5">
                    <div class="row ">


                        <div class="input-field col s12">

                            <input id="email" v-model="loginUser.email" type="email">

                            <label for="email" ><i class="fa fa-user"></i> Correo </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" v-model="loginUser.password" type="password" class="validate">
                            <label for="password"> <i class="fa fa-lock"></i> Contraseña</label>
                        </div>
                    </div>
                    <div class="row" style="position:center;">
                        <a v-on:click="login" class="waves-effect green lighten-2 btn text-darken-3 col s12 " style="position:center"> <i class="fa fa-heartbeat red-text text-lighten-2"></i> Entrar</a>
                        <br />
                        <br />
                        <br />
                        <a href="" class="col s12">Registrarse</a>
                    </div>
                </div>
        </form>
          
        </div>


