
@{
    ViewBag.Title = "Busqueda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="subcontainer"  onload="getProducts">
        <h2>Mapa De Busqueda</h2>
        <div>
            <h2>Busca ubicaciones específicas</h2>
            <label class="col s6 m6 l6">
                <gmap-autocomplete  default-place="Mexico" @@place_changed="setPlace">
                </gmap-autocomplete>
                <a class="waves-effect waves-effect btn" @@click="centerCurrentPlace">Go <i class="fa fa-arrow-circle-right"></i></a>
            </label>
            <br />

        </div>
        <br>
        <div class="row">
            <div class="col s12">
                <gmap-map class="col s6" :center="center" :zoom="MapZoom" style="height: 300px; margin-right:15px;">
                    <gmap-marker :key="index"
                                 v-for="(m, index) in markers"
                                 :position="m.position"
                                 @@click="center=m.position"></gmap-marker>

                </gmap-map>
                <div style="height:300px; overflow:auto;">
                    <table class="highlight hand col s5 " >
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Dueño</th>
                                <th>Costos uso/transporte</th>
                            </tr>
                        </thead>

                        <tbody >
                            <tr v-for="producto in products" v-on:click="setProductLocation(producto)">
                                <td>{{producto.product_id.name}}</td>
                                <td>{{producto.inventory_id.user_id.username}}</td>
                                <td>{{producto.product_id.description}}</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                </div>
            </div>
    </div>