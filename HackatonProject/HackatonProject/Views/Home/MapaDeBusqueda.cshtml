
@{
    ViewBag.Title = "MapaDeBusqueda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <h2>Mapa De Busqueda</h2>
        <div>
            <h2>Search and add a pin</h2>
            <label class="col s6 m6 l6">
                <gmap-autocomplete  default-place="Mexico" @@place_changed="setPlace">
                </gmap-autocomplete>
                <a class="waves-effect waves-effect btn" @@click="addMarker"><i class="fa fa-plus-circle"></i>Add</a>
            </label>
            <br />

        </div>
        <br>
        <div class="row">
            <div class=" col s12">
                <gmap-map class="col s6" :center="center" :zoom="12" style="height: 300px; margin-right:15px;">

                </gmap-map>
                <table class="highlight hand col s5">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Item Name</th>
                            <th>Item Price</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>Alvin</td>
                            <td>Eclair</td>
                            <td>$0.87</td>
                        </tr>
                        <tr>
                            <td>Alan</td>
                            <td>Jellybean</td>
                            <td>$3.76</td>
                        </tr>
                        <tr>
                            <td>Jonathan</td>
                            <td>Lollipop</td>
                            <td>$7.00</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>